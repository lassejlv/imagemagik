<!DOCTYPE html>
<html>
    <head>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
        <link
            rel="stylesheet"
            href="https://unpkg.com/hypestyle@0.1.5/dist/css/hypestyle.min.css"
        />
        <title>Uploaded with sussess!</title>
    </head>
    <body style="background: #2c3e50">
        <h1
            style="color: white; margin-top: 10rem; font-weight: bold"
            class="text-center"
        >
            Your image was uploaded with success!
        </h1>
        <br />
        <div class="text-center w-full">
            <button class="btn btn-primary bs-sm">
                <a
                    style="
                        text-decoration: none;
                        color: white;
                        font-family: monospace;
                    "
                    href="/uploads/<%- image  %> "
                    target="_blank"
                >
                    👁 View image
                </a>
            </button>
            <button type="btn" class="btn btn-gray bs-sm">
                <a
                    style="
                        text-decoration: none;
                        color: white;
                        font-family: monospace;
                    "
                    value="https://imagemagik.herokuapp.com/uploads/<%- image  %>"
                    id="copy"
                    class="btn-lg"
                    target="_blank"
                >
                    🔗 Copy URL
                </a>
            </button>
            <button class="btn btn-secondary bs-sm">
                <a
                    style="
                        text-decoration: none;
                        color: white;
                        font-family: monospace;
                    "
                    href="/uploads/<%- image  %> "
                    class="btn-lg"
                    target="_blank"
                    download="<%- image  %>"
                >
                    <i class="fa fa-download"></i> Download
                </a>
            </button>
        </div>
        <script>
            const btn = document.getElementById("copy");
            btn.addEventListener("click", function () {
                const val =
                    "https://imagemagik.herokuapp.com/uploads/<%- image  %>";

                navigator.clipboard.writeText(val).then(
                    function () {
                        console.log("Copied to clipboard");
                    },
                    function (err) {
                        console.error("Could not copy text: ", err);
                    }
                );
                btn.innerHTML = "✅ Copied to clipboard!";

                setTimeout(() => {
                    btn.innerHTML = "🔗 Copy URL";
                }, 2000);
            });
        </script>
    </body>
</html>
